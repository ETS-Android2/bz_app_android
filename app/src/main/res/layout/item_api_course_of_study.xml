<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="188dp"
    android:id="@+id/item"
    android:layout_height="wrap_content"
    android:background="@color/eee"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_c89a9f0_r5"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_api_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火币API设置教程"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12dp"
        android:maxWidth="100dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/view_1"
        app:layout_constraintStart_toStartOf="@id/view_1"/>
    <TextView
        android:textColor="@color/eee"
        android:text="查看详情"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_api_title"
        app:layout_constraintStart_toStartOf="@id/tv_api_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>