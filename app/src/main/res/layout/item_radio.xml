<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/common_dialog_text_margin_left">
    <CheckBox
        android:id="@+id/cb_rv"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toTopOf="@id/cb_rv"
        app:layout_constraintStart_toEndOf="@id/cb_rv"
        app:layout_constraintBottom_toBottomOf="@id/cb_rv"
        tools:text="火币"/>
    <TextView
        android:id="@+id/tv_exp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/cb_rv"
        app:layout_constraintBottom_toBottomOf="@id/cb_rv"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        android:text="暂未绑定"/>
    <TextView
        android:id="@+id/tv_click_api"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/cb_rv"
        app:layout_constraintBottom_toBottomOf="@id/cb_rv"
        app:layout_constraintStart_toEndOf="@id/tv_exp"
        android:text="添加API"/>

</androidx.constraintlayout.widget.ConstraintLayout>
