<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_ploy"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:minHeight="120dp">

    <com.lihang.ShadowLayout
        android:id="@+id/shadow_layout"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        app:hl_cornerRadius="@dimen/shadow_layout_corner_radius"
        app:hl_shadowColor="@color/shadow_color"
        app:hl_shadowLimit="@dimen/shadow_layout_limit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="@drawable/select_white_f4f" />
    </com.lihang.ShadowLayout>


    <TextView
        android:id="@+id/tv_ploy_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:drawableLeft="@mipmap/ic_ploy"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="BTC"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/shadow_layout"
        app:layout_constraintTop_toTopOf="@id/shadow_layout" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近一月年化率"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_ploy_annualized_rate"
        app:layout_constraintTop_toBottomOf="@id/tv_ploy_annualized_rate" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:background="@color/eee"
        app:layout_constraintBottom_toBottomOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/tv_ploy_annualized_rate"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_annualized_rate" />

    <TextView
        android:id="@+id/tv_ploy_annualized_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="999.99%"
        android:textColor="@color/red"
        android:textSize="21dp"
        app:layout_constraintStart_toStartOf="@id/shadow_layout"
        app:layout_constraintTop_toBottomOf="@id/tv_ploy_rv_name" />

    <TextView
        android:id="@+id/tv_ploy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="投资复合策略"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/shadow_layout"
        app:layout_constraintStart_toStartOf="@id/tv_ploy_annualized_rate" />

    <TextView
        android:id="@+id/tv_number_of_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="1千+"
        android:textColor="@color/black"
        android:textSize="21dp"
        app:layout_constraintStart_toEndOf="@id/view_2"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_annualized_rate" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用人数"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_number_of_users"
        app:layout_constraintTop_toBottomOf="@id/tv_number_of_users" />

    <TextView
        android:id="@+id/tv_ploy_label_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_e9f_solid"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="4dp"
        android:text="激进型"
        android:textColor="@color/main_theme_color"
        android:textSize="9dp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_ploy_label_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_e9f_solid"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="4dp"
        android:text="激进型"
        android:textColor="@color/main_theme_color"
        android:textSize="9dp"
        app:layout_constraintStart_toEndOf="@id/tv_ploy_label_one"
        app:layout_constraintTop_toBottomOf="@id/tv_ploy_type"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_label_one" />

    <TextView
        android:id="@+id/tv_ploy_label_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_e9f_solid"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="4dp"
        android:text="激进型"
        android:textColor="@color/main_theme_color"
        android:textSize="9dp"
        app:layout_constraintStart_toEndOf="@id/tv_ploy_label_two"
        app:layout_constraintTop_toBottomOf="@id/tv_ploy_label_two"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_label_two" />

    <TextView
        android:id="@+id/tv_ploy_label_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_cdfa_stroke"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="热门"
        android:textColor="#ffdfa01e"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_ploy_rv_name"
        app:layout_constraintStart_toEndOf="@id/tv_ploy_rv_name"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_rv_name" />

    <TextView
        android:id="@+id/tv_ploy_label_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape_cdf1_stroke"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="最新"
        android:textColor="@color/red"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_ploy_label_three"
        app:layout_constraintTop_toTopOf="@id/tv_ploy_label_three" />


</androidx.constraintlayout.widget.ConstraintLayout>