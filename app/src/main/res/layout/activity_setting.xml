<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_def">

        <com.bizeng.lh.widget.view.SettingItemView
            android:id="@+id/siv_setting_software_upgrade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_setting_item_height"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:item_content="@string/software_upgrade"
            app:item_content_text_color="@color/text_black"
            app:item_divider="true"
            app:item_right_image="@mipmap/ic_mine_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bizeng.lh.widget.view.SettingItemView
            android:id="@+id/siv_setting_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_setting_item_height"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            app:item_content="免责申明"
            app:item_content_text_color="@color/text_black"
            app:item_divider="true"
            app:item_right_image="@mipmap/ic_mine_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/siv_setting_software_upgrade" />

        <com.bizeng.lh.widget.view.SettingItemView
            android:id="@+id/siv_setting_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_setting_item_height"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            app:item_content="用户协议"
            app:item_content_text_color="@color/text_black"
            app:item_divider="true"
            app:item_right_image="@mipmap/ic_mine_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/siv_setting_disclaimer" />

        <com.bizeng.lh.widget.view.SettingItemView
            android:id="@+id/siv_setting_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_setting_item_height"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            app:item_content="隐私政策"
            app:item_content_text_color="@color/text_black"
            app:item_divider="true"
            app:item_right_image="@mipmap/ic_mine_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/siv_setting_user_agreement" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="#ff333333"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/siv_setting_privacy_policy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>