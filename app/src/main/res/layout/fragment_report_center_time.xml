    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white_r0066">

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_report_start_time"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:textColor="#ff3c5b75"
                android:textSize="14dp"
                android:gravity="center"
                tools:text="2021.01.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textColor="#ff3c5b75"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_report_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3c5b75"
                android:textSize="14dp"
                tools:text="2021.01.07" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_report_start_time2"
                android:layout_width="118dp"
                android:layout_height="34dp"
                android:background="@drawable/shape_stroke_c245_solid_cece_r2"
                android:drawableRight="@mipmap/ic_drop_down2"
                android:gravity="center"
                android:paddingRight="12dp"
                android:textColor="#ff3c5b75"
                android:textSize="14dp"
                tools:text="2021.01.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#ff3c5b75"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_report_end_time2"
                android:layout_width="118dp"
                android:layout_height="34dp"
                android:background="@drawable/shape_stroke_c245_solid_cece_r2"
                android:drawableRight="@mipmap/ic_drop_down2"
                android:gravity="center"
                android:paddingRight="12dp"
                android:textColor="#ff3c5b75"
                android:textSize="14dp"
                tools:text="2021.01.07" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/bar_chart"
            app:layout_constraintEnd_toEndOf="@id/bar_chart"
            app:layout_constraintStart_toStartOf="@id/bar_chart"
            app:layout_constraintTop_toTopOf="@id/bar_chart" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
