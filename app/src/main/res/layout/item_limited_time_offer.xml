<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg_1"
        android:layout_width="319dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_cf1f8_r6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:text="充币100 ~ 300USDT"
        android:textColor="@color/text_black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/iv_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_bg_1" />

    <TextView
        android:id="@+id/tv_presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="赠送30%点"
        android:textColor="#37761F"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_recharge_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:paddingStart="11dp"
        android:paddingTop="5dp"
        android:paddingEnd="11dp"
        android:paddingBottom="5dp"
        android:text="前往兑换"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:background="@drawable/shape_c245_r6"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_1"
        app:layout_constraintEnd_toEndOf="@id/iv_bg_1" />
</androidx.constraintlayout.widget.ConstraintLayout>